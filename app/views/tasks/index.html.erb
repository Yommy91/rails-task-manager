<h1>My tasks</h1>

<ol>
  <% @tasks.each do |task| %>
    <%= link_to task_path(task) do %>
      <li>
        <%= task.title %>
        <%= link_to "Delete",
            destroy_path(task),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
      </li>
    <% end %>
  <% end %>
</ol>
<%= link_to "Create a task", tasks_new_path %>
